script(type='text/ng-template', id='text-field-editor.html')
  bb-field-editor(ng-model='field' on-save="onSave({value: value})"
    can-edit='canEdit')

    ng-form(role='form')

      .edit-row(ng-class='{edit: canEdit}' ng-click="toggleEdit()")
        a.fa.fa-edit(tooltip='Edit {{displayName}}' ng-show='canEdit')
        h3 {{DisplayName}}

      .input-group.input-group-sm(ng-show='editing')
        input.form-control(type='text' ng-model='field'
          on-enter="save()" placeholder='Enter {{displayName}}')
        .input-group-btn
          button.btn.btn-primary(ng-click="save()") Save

      div.transclude(ng-show='!editing && field') {{field}}

      .weak(ng-show='!editing && !field') ({{DisplayName}} unset)
