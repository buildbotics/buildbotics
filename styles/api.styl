body
  width: 920px
  margin: auto
  font: 12pt "Helvetica Neue",arial,freesans,clean,sans-serif;
  color: #393939
  position: relative
  padding: 1em 0

#toc
  width: 260px
  position: fixed
  margin-left: 660px
  border: 1px solid #cacaca
  border-radius: 3px

  *
    padding: 0
    margin: 0

  h2
    margin: 0.25em

  a
    text-decoration: none
    color: #393939
    display: block
    padding: 5px
    border-bottom: 1px solid #cacaca
    outline: 0

    &:hover
      color: #327fc7
      background-color: #f2f2f3

  li
    list-style: none

  > ul > li
    > ul
      background-color: #f8f8f9
      display: none

      a
        padding-left: 2.5em

    > a
      font-weight: bold

      span
        display: inline-block
        text-align: center
        color: #888
        width: 1em

.title
  font-size: 250%
  font-weight: bold

#content
  width: 630px
  position: absolute
  left: 0px
  padding-bottom: 1em

  table, th, td
    padding: 0.5em 1em
    border: 1px solid #ddd
    border-collapse: collapse

  li
    margin: 0.5em auto

  p
    margin: 1em 0

  h1, h2, h3, h4
    margin: 2em auto 1em

  h1
    border-bottom: 1px solid #ddd

  h2, h3
    font-weight: normal

  h4
    color: #888

  code
    background: #f8f8f9
    font-size: 10pt
    font-family: Consolas,"Liberation Mono",Courier,monospace;
    border: 1px solid #cacaca
    border-radius: 3px
    padding: 0 3px

  pre > code
    display: block
    padding: 1em
    overflow: auto
    margin: 2em 0

  .lang-sh
    background-color: #666
    border: none
    color: #fff

  .lang-http
    padding: 1.25em 1em
    background-color: #eee
    margin-bottom: -2.2em
    border-radius: 3px 3px 0 0
    border-bottom: 1px solid #ddd
    z-index: 10
    position: relative
