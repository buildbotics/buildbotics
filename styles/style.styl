page_width = 960px
header_height = 48px
header_button_size = 32px
nav_padding = 8px

[ng\:cloak], [ng-cloak], .ng-cloak
  display: none !important

body
  background-color: #eee
  padding-top: 60px

#header
  background-color: #ccc
  box-shadow: 0 0 5px 0 rgba(50, 50, 50, 0.8)

  .navbar-contents
    max-width: page_width
    margin: auto

  .navbar-text
    margin: 15px 6px

  a
    text-decoration: none
    outline: 0
    color: #333

  .navbar-nav > li > a
    &:hover
      background-color: #ddd

  .navbar-nav .dropdown > a
    padding-top: 10px
    padding-bottom: 10px

  .navbar-header
    font-size: 18pt

  .navbar-right li > a.icon
    padding-top: 8px

  .navbar-form
    padding-top: 4px

    .form-control
      width: 12em

  .dropdown-toggle
    margin-left: 0.5em
    border-left: 1px solid #bbb
    border-right: 1px solid #bbb
    height: 50px

  .dropdown
    cursor: pointer

    .fa
      font-size: 16pt
      margin-right: 0.3em
      width: 24px

    .avatar, .user-info, .marker
      float: left

    .avatar
      margin-top: 4px

    .user-info
      margin-top: -2px
      text-align: center

    .marker
      margin-top: 20px
      margin-right: 0
      padding-right: 0

    .points
      margin-left: 0.3em

    .badges, .badges .fa
      width: auto
      font-size: 10pt

    .badges .fa
      color: #ccab62

  .dropdown-menu > li > a:hover
    background-color: #fff

  .title
    font-size: header_button_size

  .form-control, .btn-default, .dropdown-menu
    background-color: #eee

  .form-control
    border-radius: 20px
    height: header_height - 18

  .avatar
    display: inline-block
    margin-right: nav_padding

  .fa
    font-size: 24pt
    margin-left: 6px

  .login
    margin-top: 6px
    padding: 5px 0

  .google
    color: #cc3d2d

  .facebook
    color: #2b3990

  .twitter
    color: #27aae1

  .github
    color: #1c75bc

.avatar
  border-radius: 5px
  width: header_button_size
  height: header_button_size

#content
  max-width: page_width
  margin: auto

.home-page
  .actions
    max-width: 600px
    margin: auto
    margin-top: 100px

    .panel
      float: left
      width: 180px
      height: 180px
      margin: 10px

    .panel-heading
      text-align: center
      font-weight: bold
      font-size: 150%

a.likes
  color: #666
  text-decoration: none
  cursor: pointer

.likes .user-likes
  color: #1574ce


project_width = 300px
project_height = 420px
project_highlight = #bbb
project_border = 2px solid #eee
project_highlight_border = 2px solid #aaa

.flexbox .projects
  display: flex
  flex-wrap: wrap
  justify-content: space-around

  .project
    flex: 0 0 project_width

.projects
  list-style: none
  padding: 0

  a
    text-decoration: none

  .project
    position: relative
    display: inline-block
    margin: 8px
    width: project_width
    height: project_height
    box-shadow: 0 0 5px 0 rgba(50, 50, 50, 0.2)
    overflow: hidden
    text-shadow: 1px 1px #444
    cursor: pointer

    &:hover
      box-shadow: 0 0 5px 0 rgba(50, 50, 50, 0.8)

    .image
      min-width: project_width
      height: project_height - 40px

    .avatar
      margin: 2px
      padding: 2px
      display: inline-block
      width: header_button_size + 6
      height: header_button_size + 6
      vertical-align: top

      &:hover
        box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.8)

    .info
      margin: 2px
      padding: 2px
      width: 180px
      position: absolute
      color: white
      overflow: hidden
      text-overflow: ellipsis
      background-color: rgba(220, 220, 220, 0.6)
      border-radius: 5px
      box-shadow: 0 0 5px 0 rgba(50, 50, 50, 0.2)

      > div
        display: inline-block

      .title
        color: white
        font-weight: bold

        &:hover
          color: #ddd

      .author
        font-size: 10pt

    .title, .author, .likes, .comments
      display: block
      white-space: nowrap

    .social
      width: 100%
      position: absolute
      bottom: 0px
      text-align: center
      font-size: 14pt

    .likes, .comments
      width: (project_width / 3)
      margin: 10px
      color: project_highlight

    .fa
      font-size: 16pt

    .likes
      float: left

    .comments
      float: right

#user
  .picture
    width: 200px
    height: 200px
    border-radius: 5px

  .name
    font-weight: bold
